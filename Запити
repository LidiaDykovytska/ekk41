-- змінити значення '0.00' колонки термін з таблиці контракти, на значення NULL

UPDATE contracts
SET term = NULL
WHERE term = '0.00' 

--вибрати ім'я та прізвище клієнтів, які брали участь в укладені угод

SELECT c.id_cl, cl.name, cl.surname
FROM contracts AS c
INNER JOIN clients AS cl
ON c.id_cl = cl.id


-- З'єднати таблиці об'єктів і типів об'єктів по ключі

SELECT o.id, t.type, o.price
FROM objects AS o
INNER JOIN type_objects AS t
ON o.id_type=t.id

-- Порахувати скільки об'єктів нерухомості брали участь в укладені угод

SELECT COUNT(DISTINCT(id_obj))
FROM contracts

--вибрати id, street, price для об'єктів, які мають name - Голоско в таблиці місцезнаходження
SELECT o.id, o.street, o.price
FROM objects AS o
INNER JOIN locations AS l
ON o.id_location = l.id
WHERE l.name = 'Голоско'

--вибрати прізвище та ім'я клієнтів, тип яких VIP

SELECT c.name, c.surname, c.email
FROM clients AS c
INNER JOIN type_clients AS t
ON c.id_type = t.id
WHERE t.id = 'VIP'

-- вибрати об'єкти які мають 13 умову (option_conditions)

SELECT id_obj
FROM conditions
WHERE id_condit = '13'

-- знайти мінімальну ціну серед об'єктів що здаються в оренду

SELECT min(price)
FROM objects
WHERE id LIKE '%о'
 
--показати id, вулицю, район, місто, площу для об'єктів площа яких находиться в проміжку від 40 до 60 м2 

SELECT o.id, o.id_location, o.street, l.district, l.city, o.area
FROM objects AS o
INNER JOIN locations AS l
ON o.id_location=l.id
WHERE o.area between '40' and '60'
